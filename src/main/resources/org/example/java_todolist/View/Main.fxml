<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.java_todolist.controller.MainController"
            stylesheets="@../Css/Main.css">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="15" styleClass="sidebar" alignment="TOP_LEFT" prefWidth="220" BorderPane.alignment="CENTER">
            <Label text="SmartTask" styleClass="logo"/>
            <Button text="Dashboard" styleClass="sidebar-button"/>
            <Button text="Project" styleClass="sidebar-button"/>
            <Button text="Analytic" styleClass="sidebar-button"/>
            <Button text="Timesheets" styleClass="sidebar-button"/>
            <Button text="Todo" styleClass="sidebar-button"/>
            <Button text="Report" styleClass="sidebar-button"/>
            <Separator />
            <Button text="Settings" styleClass="sidebar-button"/>
            <Button text="Support" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- NAVBAR -->
    <top>
        <HBox spacing="10" styleClass="navbar" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ””" styleClass="icon-button"/>
            <Label text="Mailinda" styleClass="username"/>
            <ImageView fitHeight="30" fitWidth="30">
                <Image url="@../Assets/user_avatar.jpg"/>
            </ImageView>
        </HBox>
    </top>

    <!-- CONTENT -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content">
            <Label text="Welcome to SmartTask!" styleClass="welcome-text"/>
        </StackPane>
    </center>

</BorderPane>
