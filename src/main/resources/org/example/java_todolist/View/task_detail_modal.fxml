<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.java_todolist.controller.TaskDetailModalController" stylesheets="@../Css/TaskDetailModal.css">
    <VBox layoutX="20.0" layoutY="20.0" spacing="15">
        <Label fx:id="labelTitle" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <Label fx:id="labelDeadline" />
        <Label fx:id="labelCategory" />
        <Label fx:id="labelStatus" />
        <Label style="-fx-font-weight: bold;" text="Deskripsi:" />
        <TextArea fx:id="labelDescription" editable="false" prefHeight="100" wrapText="true" />

        <HBox spacing="10">
            <Button onAction="#onEditClicked" text="✏️ Edit" />
            <Button onAction="#onMarkDoneClicked" text="✅ Tandai Selesai" />
            <Button onAction="#onDeleteClicked" text="🗑️ Hapus" />
        </HBox>
    </VBox>
</AnchorPane>
