<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.java_todolist.controller.TaskCardController"
      spacing="10"
      styleClass="task-card"
      stylesheets="@../Css/TaskCard.css">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Judul tugas -->
    <Label fx:id="titleLabel" styleClass="task-name"/>

    <!-- Kategori tugas -->
    <Label fx:id="categoryLabel" styleClass="task-category"/>

    <!-- Tanggal deadline -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="dateLabel" styleClass="task-date"/>
    </HBox>

    <!-- Status dan assignee -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="timeLabel" styleClass="task-time"/>
        <Label fx:id="assigneeLabel" styleClass="task-assignee"/>
    </HBox>

    <!-- Deskripsi tugas -->
    <Label fx:id="notesLabel" styleClass="task-notes"/>
</VBox>
